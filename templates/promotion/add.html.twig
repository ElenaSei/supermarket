{% extends 'base.html.twig' %}
{% block main %}
    {{ form_start(form, {'action': path('add_promotion'), 'method': 'POST'}) }}
    {{ form_errors(form) }}
    <div class="row">
        <div class="col">
            {{ form_row(form.product) }}
        </div>
        <div class="row">
        <div class="col" id="some-custom-id">
            {{ form_row(form.quantity) }}
        </div>
        </div>
            <div class="row">
                <div class="col" id="some-custom-id">
                    {{ form_row(form.price) }}
                </div>
            </div>
    </div>
    {{ form_end(form) }}
{% endblock %}
